<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">


    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#464555"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/imageView"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginHorizontal="280dp"
            android:layout_marginVertical="15dp"
            android:onClick="onClick2"
            android:background="@drawable/calendar"
            android:contentDescription="TODO" />

        <Button
            android:id="@+id/imageView2"
            android:onClick="onClick1"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/help2"
            android:contentDescription="TODO"
            />

        <Button
            android:id="@+id/imageView5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="320dp"
            android:layout_marginVertical="15dp"
            android:onClick="onClick10"
            android:background="@drawable/close"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            app:srcCompat="@drawable/menu"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="149dp"
            android:layout_marginVertical="10dp"
            android:text="Note"
            android:textColor="#ffff"
            android:textSize="21sp" />
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/pesan"
   android:layout_below="@id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:divider="#000" />
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#464555"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/imageView4"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="19dp"
            android:layout_marginVertical="13dp"
            android:background="@drawable/emoji"
            android:onClick="onClick3"
            android:contentDescription="TODO" />


        <Button
            android:id="@+id/imageView8"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="320dp"
            android:layout_marginVertical="13dp"
            android:onClick="tampil2"
            android:background="@drawable/send"
            android:contentDescription="TODO" />

        <android.support.v7.widget.CardView
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="62dp"
            android:layout_marginVertical="8dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="15dp"
            tools:targetApi="o">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="3dp"
                android:background="#fff"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>



    </android.support.v7.widget.CardView>

</RelativeLayout>